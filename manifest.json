{
  "manifest_version": 3,
  "name": "SOTE - Expansor de texto",
  "version": "1.1.0",
  "description": "Expanda automaticamente abreviações e frases de texto definidas pelo usuário",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/constants.js",
        "utils/expansion.js",
        "utils/db.js",
        "utils/autocomplete.js",
        "content/content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils/constants.js",
        "utils/db.js",
        "utils/expansion.js",
        "utils/autocomplete.js",
        "utils/autocomplete.css",
        "utils/notifier.js",
        "utils/notifier.css",
        "utils/confirmationModal.js",
        "utils/confirmationModal.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}